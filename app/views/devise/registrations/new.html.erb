<div class="max-w-4xl w-full mx-auto bg-ivf-blue-50 rounded-lg p-12 mt-12">
  <h2 class="font-bold text-2xl">Register</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'space-y-6 mb-6'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %>
      <div class="input-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <div class="input-field">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <div class="input-field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
  <% end %>

  <%= render "devise/shared/links" %>
</div>