<div class="w-full max-w-4xl px-4 lg:px-0 ">
  <div class="p-6 mx-auto mt-12 mb-12 rounded-lg bg-ivf-blue-50 lg:p-12">
    <h2 class="text-2xl font-bold">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'space-y-6 mb-6'}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %>
        <div class="input-field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <button type="submit" class="btn btn-primary">Send me reset password instructions</button>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>