<div class="max-w-4xl w-full mx-auto bg-ivf-blue-50 rounded-lg p-12 mt-12">
  <h2 class="font-bold text-2xl">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'space-y-6 mb-6'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %>
      <div class="input-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Send me reset password instructions</button>
  <% end %>

  <%= render "devise/shared/links" %>
</div>